{
  "name": "keenetic-vpn-manager",
  "version": "1.0.0",
  "description": "Приложение для управления VPN на роутерах Keenetic",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development&& electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:mac:universal": "electron-builder --mac --universal",
    "build:linux": "electron-builder --linux",
    "build:linux:dir": "electron-builder --linux dir",
    "build:all": "electron-builder --win --mac --linux",
    "web": "node server.js"
  },
  "keywords": [
    "keenetic",
    "vpn",
    "network",
    "management"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "pngjs": "^7.0.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.keenetic.vpnmanager",
    "productName": "Keenetic VPN Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!**/*.bak"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icons/icon.png",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
